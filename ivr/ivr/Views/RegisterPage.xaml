<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ivr.Views.RegisterPage"
             Shell.PresentationMode="ModalAnimated"
             Title="Register"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry Text="{Binding Email}" VerticalOptions="Center" Placeholder="Email"></Entry>
            <Entry Text="{Binding Password}" VerticalOptions="Center" IsPassword="True" Placeholder="Password"></Entry>
            <Entry Text="{Binding Repassword}" VerticalOptions="Center" IsPassword="True" Placeholder="Repassword"></Entry>
            <Button VerticalOptions="Center" Text="Register" Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>